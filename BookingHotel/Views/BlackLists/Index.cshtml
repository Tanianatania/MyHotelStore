@model IEnumerable<BookingHotel.Models.BlackList>

@{
    ViewBag.Title = "Index";
}

<h2>Black List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotel.Name)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Hotel.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BlackListId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BlackListId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BlackListId })
        </td>
    </tr>
}

</table>
